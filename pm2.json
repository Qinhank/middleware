{
  "apps": [
    {
      "name": "bepal-middleware",
      "script": "index.js",
      "exec_mode": "cluster",
      "instances": "4",
      "watch": true,
      "instance_var": "INSTANCE_ID",
      "ignore_watch": [
        "node_modules",
        "logs"
      ],
      "min_uptime": "60s",
      "max_memory_restart": "500M",
      "max_restarts": 30,
      "autorestart": true,
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_beta": {
        "NODE_ENV": "beta"
      }
    }
  ]
}